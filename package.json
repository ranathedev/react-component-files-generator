{
  "name": "generate-react-component",
  "displayName": "Generate React Component",
  "description": "It generates the basic file structure of react component",
  "version": "1.0.0",
  "icon": "images/react-icon.png",
  "publisher": "Appzaib",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ranathedev/vscode-gen-react-comp.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "generate-react-component.greetings",
        "title": "Greetings"
      },
      {
        "command": "generate-react-component.generateComponent",
        "title": "Generate Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "generate-react-component.generateComponent",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "keybindings": [
      {
        "command": "generate-react-component.generateComponent",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      }
    ],
    "configuration": {
      "title": "React Component Generator Configuration",
      "properties": {
        "generate-react-component.ext": {
          "type": "string",
          "default": "",
          "description": "The 'ext' preference"
        },
        "generate-react-component.styleType": {
          "type": "string",
          "default": "",
          "description": "The 'styleType' preference"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
